{% extends 'admin_layout.html.twig' %}

{% block title 'Posts' %}

{% block content %}
<a href='{{ path('admin.posts.add') }}' class='btn btn-success'>New Post</a>
<table class='table table-bordered mt-3'>
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Slug</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for post in pagination %}
        <tr>
            <td>{{ post.getId() }}</td>
            <td>{{ post.getTitle() }}</td>
            <td>{{ post.getSlug() }}</td>
            <td>{{ post.getCreatedAt() | date }}</td>
            <td>
                <a href='{{ path('admin.posts.edit', {id: post.id}) }}' class='btn btn-secondary'>
                    <i class="fas fa-edit"></i>
                    edit
                </a>
                <a href='{{ path('admin.posts.delete', {id: post.id}) }}' class='btn btn-danger'>
                    <i class="fas fa-trash-alt"></i>
                    delete
                </a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>
</table>
{% endblock %}
